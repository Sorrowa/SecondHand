<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zzh.View.PublishBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:background="@color/beige"
            app:popupTheme="@style/Base.Theme.AppCompat.Light.DarkActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="70dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:text="发布图书"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingBottom="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20sp"
                    android:backgroundTint="@color/beige"
                    android:gravity="center_vertical"
                    android:hint="请输入书籍名称"
                    android:inputType="textMultiLine"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20sp"
                    android:gravity="center_vertical"
                    android:text="请您选择图书类型:"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/book_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20sp"
                    android:spinnerMode="dropdown"
                    android:tag="您选好了吗">

                </Spinner>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20sp"
                    android:gravity="center_vertical"
                    android:text="输入图书简介:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/book_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="@color/beige"
                    android:hint="请输入书籍简介"
                    android:inputType="textMultiLine"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/publish_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="选择图片"
            android:textSize="20sp" />

        <Button
            android:id="@+id/send_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="提交图书"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>