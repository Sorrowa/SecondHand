<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:id="@+id/my_message_type_have_image"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/my_message_type_have_image"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_message_type_have_name"
                tools:text="@string/adapter_recycler_deal_type_have_name"
                android:textSize="16sp"
                android:padding="2dp"
                android:textColor="@color/adapter_recycler_comment_name_text_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_message_type_have_type"
                tools:text="(小说)"
                android:textSize="12sp"
                android:padding="2dp"
                android:textColor="@color/adapter_recycler_comment_name_text_color"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/my_message_type_have_name"/>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_message_type_have_comment"
            tools:text="评论：我爱你"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:textColor="@color/adapter_recycler_comment_date_text_color"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/adapter_recycler_comment_text_background"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>