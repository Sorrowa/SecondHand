<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/deal_type_have_my_container">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:id="@+id/deal_type_have_image"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/deal_type_have_image"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deal_type_have_name"
                    tools:text="@string/adapter_recycler_deal_type_have_name"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textColor="@color/adapter_recycler_comment_name_text_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adapter_recycler_deal_type_have_my"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="@color/adapter_recycler_comment_name_text_color"
                    android:background="@drawable/confirm_text_background"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/deal_type_have_name"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deal_type_have_type"
                tools:text="@string/adapter_recycler_deal_type_have_type"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:textColor="@color/adapter_recycler_comment_date_text_color"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/deal_type_have_my_container">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:id="@+id/deal_type_have_change_book_image"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/deal_type_have_change_book_image"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deal_type_have_change_book_name"
                    tools:text="@string/adapter_recycler_deal_type_have_name"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textColor="@color/adapter_recycler_comment_name_text_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adapter_recycler_deal_type_have_change"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="@color/adapter_recycler_comment_name_text_color"
                    android:background="@drawable/confirm_text_background"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/deal_type_have_change_book_name"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deal_type_have_change_book_type"
                tools:text="@string/adapter_recycler_deal_type_have_type"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:textColor="@color/adapter_recycler_comment_date_text_color"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/change"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/adapter_recycler_comment_text_background"
        android:layout_below="@+id/deal_type_have_my_container"
        android:layout_marginStart="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="未确认"
        android:background="@drawable/confirm_text_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/fragment_deal_no_confirm"
        android:padding="4dp"
        android:id="@+id/adapter_comment_type_have_confirm"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/adapter_recycler_comment_text_background"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>