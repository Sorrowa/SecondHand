<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:id="@+id/deal_type_have_image"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/deal_type_have_image"
        android:layout_centerVertical="true"
        android:paddingStart="5dp"
        tools:ignore="RtlSymmetry">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deal_type_have_name"
            tools:text="@string/adapter_recycler_deal_type_have_name"
            android:textSize="16sp"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deal_type_have_type"
            tools:text="@string/adapter_recycler_deal_type_have_type"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:padding="2dp"/>
    </LinearLayout>


</RelativeLayout>