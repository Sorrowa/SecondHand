<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="注册"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:id="@+id/sign_up_toolbar">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/phr_margin_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/phr_padding_12"
        android:paddingRight="@dimen/phr_padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_30"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/sign_up_head" />

            <EditText
                android:id="@+id/sign_up_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="请输入用户名"
                android:inputType="text"
                android:textColorHint="@color/sign_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/shape_gradient_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_30"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/sign_up_pwd" />

            <EditText
                android:id="@+id/sign_up_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:layout_toEndOf="@+id/image"
                android:layout_toLeftOf="@+id/view"
                android:layout_toRightOf="@+id/image"
                android:layout_toStartOf="@+id/view"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColorHint="@color/sign_text" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/phr_height_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/phr_margin_3"
                android:layout_marginLeft="@dimen/phr_margin_1"
                android:layout_marginRight="@dimen/phr_margin_1"
                android:layout_marginTop="@dimen/phr_margin_3"
                android:layout_toLeftOf="@+id/sign_up_see_password"
                android:layout_toStartOf="@+id/sign_up_see_password"
                android:background="@drawable/shape_gradient_line" />
            <CheckBox
                android:id="@+id/sign_up_see_password"
                android:layout_width="@dimen/phr_width_20"
                android:layout_height="@dimen/phr_width_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_30"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/sign_up_pwd" />

            <EditText
                android:id="@+id/sign_up_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="请重复密码"
                android:inputType="textPassword"
                android:textColorHint="@color/sign_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/shape_gradient_line" />

        <RadioGroup
            android:id="@+id/sign_up_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/phr_height_6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sign_up_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男" />

            <RadioButton
                android:id="@+id/sign_up_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_30"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/sign_up_email" />

            <EditText
                android:id="@+id/sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="请输入邮箱"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/sign_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/shape_gradient_line" />

        <Button
            android:id="@+id/sign_up_submit"
            style="@style/Button.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phr_height_15"
            android:text="注册"
            android:textSize="@dimen/phr_text_size_20" />

    </LinearLayout>
</LinearLayout>